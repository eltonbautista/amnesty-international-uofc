---
import AboutTeamMember from "./AboutTeamMember";
const { members } = Astro.props;
---

<section class="w-full min-h-screen my-10 grid">
  <div class="max-w-screen-xl justify-self-center px-4 md:px-6 lg:px-8">
    <div
      class="block md:grid md:grid-cols-3 md:gap-12 [&:hover>div]:opacity-50]"
    >
      {
        members.map((member: any, index: number) => {
          const { name, position, profilePicture, imgAlt, colorOne, colorTwo } =
            member;
          const foo = colorOne;
          return (
            <AboutTeamMember
              name={name}
              position={position}
              profilePicture={profilePicture}
              imgAlt={imgAlt}
              index={index}
              colorOne={foo}
              colorTwo={colorTwo}
            />
          );
        })
      }
    </div>
  </div>
</section>
