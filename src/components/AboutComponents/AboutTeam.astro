---
import AboutTeamMember from "./AboutTeamMember";
import * as teamMembers from "../../pages/about.md";
---

<section class="w-full min-h-screen my-10 grid">
  <div class="max-w-screen-xl justify-self-center px-4 md:px-6 lg:px-8">
    <div
      class="block md:grid md:grid-cols-3 md:gap-12 [&:hover>div]:opacity-50]"
    >
      {
        teamMembers.frontmatter.teamMembers.map(
          (member: any, index: number) => {
            const { name, position, imgSrc, imgAlt, colorOne } = member;
            return (
              <AboutTeamMember
                name={name}
                position={position}
                imgSrc={imgSrc}
                imgAlt={imgAlt}
                index={index}
                colorOne={colorOne}
              />
            );
          }
        )
      }
    </div>
  </div>
</section>
