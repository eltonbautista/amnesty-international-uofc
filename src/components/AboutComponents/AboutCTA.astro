---
interface IAboutCTA {
  headingOne: string;
  descriptionOne: string;
  linkOne: string;
  imgSrcOne: string;
  imgAltOne: string;
  headingTwo: string;
  descriptionTwo: string;
  linkTwo: string;
  imgSrcTwo: string;
  imgAltTwo: string;
}

const {
  headingOne,
  descriptionOne,
  linkOne,
  imgSrcOne,
  imgAltOne,
  headingTwo,
  descriptionTwo,
  linkTwo,
  imgSrcTwo,
  imgAltTwo,
} = Astro.props;
---

<section class="grid py-8 bg-base-200">
  <div
    class="max-w-screen-xl px-4 md:px-6 lg:px-8 justify-self-center lg:grid-cols-2 lg:grid justify-items-center"
  >
    <div
      class="m-10 mx-4 max-w-screen-md overflow-hidden rounded-xl border shadow-lg md:pl-8"
    >
      <div class="flex flex-col overflow-hidden bg-white md:flex-row md:h-80">
        <div class="flex w-full flex-col p-4 md:w-1/2 md:p-8 lg:w-3/5">
          <h2 class="text-xl font-bold text-gray-900 md:text-2xl lg:text-4xl">
            {headingOne}
          </h2>
          <p class="my-3 max-w-md text-gray-500">
            {descriptionOne}
          </p>
          <div class="mt-auto">
            <div
              class="group flex w-44 cursor-pointer select-none items-center justify-center rounded-md bg-black px-2 py-1 text-white transition"
            >
              <a
                href={linkOne}
                class="group flex w-full items-center justify-center rounded py-1 text-center font-bold"
              >
                Learn More
              </a>
              <svg
                class="flex-0 group-hover:w-6 ml-4 h-6 w-0 transition-all"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </div>
          </div>
        </div>

        <div
          class="order-first ml-auto h-48 w-full md:order-none md:h-auto md:w-1/2 lg:w-2/5"
        >
          <img
            class="h-full w-full object-cover"
            src={imgSrcOne}
            width="200px"
            height="300px"
            loading="lazy"
          />
        </div>
      </div>
    </div>
    <!-- Image right -->
    <div
      class="m-10 mx-4 max-w-screen-md overflow-hidden rounded-xl border shadow-lg md:pr-8"
    >
      <div class="flex flex-col overflow-hidden bg-white md:flex-row md:h-80">
        <div
          class="order-first ml-auto h-48 w-full md:order-none md:h-auto md:w-1/2 lg:w-2/5"
        >
          <img
            class="h-full w-full object-cover"
            src={imgSrcTwo}
            width="200px"
            height="300px"
            loading="lazy"
          />
        </div>
        <div class="flex w-full flex-col p-4 md:w-1/2 md:p-8 lg:w-3/5">
          <h2 class="text-xl font-bold text-gray-900 md:text-2xl lg:text-4xl">
            {headingTwo}
          </h2>
          <p class="my-3 max-w-md text-gray-500">
            {descriptionTwo}
          </p>
          <div class="mt-auto">
            <div
              class="group flex w-44 cursor-pointer select-none items-center justify-center rounded-md bg-black px-2 py-1 text-white transition"
            >
              <a
                href={linkTwo}
                class="group flex w-full items-center justify-center rounded py-1 text-center font-bold"
              >
                Learn More
              </a>
              <svg
                class="flex-0 group-hover:w-6 ml-4 h-6 w-0 transition-all"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
